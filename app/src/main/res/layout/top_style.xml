<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_style"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#eeF7F7F6"
    android:orientation="horizontal"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/id_logo_top"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:background="@mipmap/logo_critic" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="6"
        android:gravity="end" >

        <ImageView
            android:id="@+id/id_data2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/date_4" />

        <ImageView
            android:id="@+id/id_week_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_data2_top"
            android:src="@mipmap/week_6" />

        <ImageView
            android:id="@+id/id_month_divide_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_week_top"
            android:layout_alignStart="@+id/id_week_top"
            android:layout_below="@+id/id_week_top"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:src="@mipmap/month_divide" />

        <ImageView
            android:id="@+id/id_months_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_week_top"
            android:layout_toEndOf="@+id/id_month_divide_top"
            android:layout_toRightOf="@+id/id_month_divide_top"
            android:src="@mipmap/month_11" />
    </RelativeLayout>

</LinearLayout>