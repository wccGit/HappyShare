<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    >

    <RelativeLayout
        android:id="@+id/id_top_user"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EC504D"
        android:gravity="center" >

        <ImageView
            android:id="@+id/id_whiteLine_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/avator_whiteline" />

        <ImageView
            android:id="@+id/id_login_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/avator_login" />

        <TextView
            android:id="@+id/id_user_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_login_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:text="点击使用QQ登录"
            android:textColor="#fff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <ListView
            android:id="@+id/id_lv_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_top_user" >
        </ListView>
    </LinearLayout>

</LinearLayout>